<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:text="CAR STATUS"
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_highlight_off_24"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/tv1"
        app:layout_constraintBottom_toBottomOf="@id/title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/charge"
        android:text="Charge"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="10%"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/charge"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:id="@+id/range"
        app:layout_constraintTop_toBottomOf="@id/charge"
        app:layout_constraintStart_toStartOf="@id/charge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30kmc"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:id="@+id/tv2"
        app:layout_constraintTop_toTopOf="@id/range"
        app:layout_constraintEnd_toEndOf="@id/tv1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:text="Distance"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/range"
        app:layout_constraintStart_toStartOf="@id/charge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300kmc"
        android:id="@+id/tv3"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/distance"
        app:layout_constraintEnd_toEndOf="@id/tv1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Scan QR"
        android:id="@+id/bt1"
        android:layout_marginTop="10dp"
        android:layout_marginVertical="15dp"
        android:background="#FFB300"
        android:textColor="#fff"
        app:layout_constraintEnd_toStartOf="@id/bt2"
        app:layout_constraintTop_toBottomOf="@id/distance"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="RESERVE"
        android:background="#FFB300"
        android:textColor="#fff"
        android:id="@+id/bt2"
        app:layout_constraintTop_toTopOf="@id/bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bt1"
        app:layout_constraintStart_toEndOf="@id/bt1"/>

</androidx.constraintlayout.widget.ConstraintLayout>